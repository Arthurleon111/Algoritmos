
questao 3 
programa {
  funcao inicio() {
    //declarando variaveis
    cadeia  nome
    real nota1, nota2, nota3, nota4, media
    //entrada de dados 
    escreva ("escreva seu nome:")
    leia(nome)
    escreva("Infrorme a primeira nota: ")
    leia(nota1)
    escreva("Infrorme a segunda nota: ")
    leia(nota2)
    escreva("Infrorme a terceira nota: ")
    leia(nota3)
    escreva("Infrorme a quarta nota: ")
    leia(nota4)
    //processamento
    media = nota1 + nota2 + nota3 + nota4 /4
    //SAIDA DE DADOS
    escreva("A média do aluno: ", nome , media)
  

  }
}

questao 4
programa {
  funcao inicio() {
    
    real m1,m2,m3,media_aritmetica

    escreva( "informe a 1° nota: \n")
    leia(m1)

    escreva( "informe a 2° nota: \n")
    leia(m2)

    escreva( "informe a 3° nota: \n")
    leia(m3)   

    media_aritmetica = (m1+m2+m3)/3

    escreva("a média é ", media_aritmetica)


  }
}

questao 5
programa {
  funcao inicio() {
    
    real altura,peso

    const real k = 72.7
    const real B = 58


    escreva("informe a altura: \n")
    leia(altura)

    peso = k*altura-B

    escreva("O seu peso ideal é",peso)


  }
}
