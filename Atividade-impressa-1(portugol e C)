Questão 4
Portugol

programa {
  funcao inicio() {
    real m1, m2, m3, media
    //entrada de dados 
    escreva("Valor gasto no primeiro mês: ")
    leia(m1)
    escreva("Valor gasto no segundo mês: ")
    leia(m2)
    escreva("Valor gasto no terceiro mês: ")
    leia(m3)
    //processamento
    media = (m1 + m2 + m3)/3
    //saída de dados
    escreva("A média de gastos nos 3 meses e de: ", media)



  }
}

Linguagem C

Questão 5
Portugol

programa {
  funcao inicio() {
    real altura, peso_ideal
    cadeia nome
    // constantes
    const real k = 72.7
    const inteiro b = 58
    //entrada de dados 
    escreva("Informe a nome: ")
    leia(nome)
    escreva("Informe a altura: ")
    leia(altura)
    //processamento
    peso_ideal = k*altura-b
    //Saída de dados
    escreva("O peso ideal de ",nome, " é ", peso_ideal)



  }
}

linguagem C

Questão 6
Portugol

programa {
  funcao inicio() {
    inteiro x, y, troca
    //entrada de dados
    escreva("Informe o valor de x: ")
    leia(x)
    escreva("Informe o valor de y: ")
    leia(y)
    //processamento 
    escreva("Valores de x e y antes da troca são: ", x," e ", y)
   

    troca = x
    x = y
    y = troca
    //Saída de dados 
    escreva(" \n Os valores de x e y depois da troca são: \n")
    escreva("X é: ", x,"\n")
    escreva("Y é: ", y)
  }
}

