Portugol

programa {
  funcao inicio() {
    cadeia nome_aluno
    real n1, n2, n3, n4, media 
    // entrada de dados 
    escreva ("Escreva seu nome: ")
    leia(nome_aluno)
    escreva("Nota 1: ")
    leia(n1)
    escreva("Nota 2: ")
    leia(n2)
    escreva("Nota 3: ")
    leia(n3)
    escreva("Nota 4: ")
    leia(n4)
    //processamento 
    media = (n1 + n2 + n3 + n4)/4
    //Saída de dados
    escreva("A média do aluno ", nome_aluno," é: ",media)


  }
}

Linguagem C

#include <stdio.h>



int main() {
	float n1, n2, n3, n4, media ;
	
	printf("Qual a sua primeira nota: ");
	scanf("%f", &n1);
	
	printf("Qual a sua segunda nota: ");
	scanf("%f", &n2);
	
	printf("Qual a sua terceira nota: ");
	scanf("%f", &n3);
	
	printf("Qual a sua quarta nota: ");
	scanf("%f", &n4);
	
	media = (n1 + n2 + n3 + n4 )/4;
	
  printf("A sua media e: %2.f", media);

}


Questão 4
Portugol

programa {
  funcao inicio() {
    real m1, m2, m3, media
    //entrada de dados 
    escreva("Valor gasto no primeiro mês: ")
    leia(m1)
    escreva("Valor gasto no segundo mês: ")
    leia(m2)
    escreva("Valor gasto no terceiro mês: ")
    leia(m3)
    //processamento
    media = (m1 + m2 + m3)/3
    //saída de dados
    escreva("A média de gastos nos 3 meses e de: ", media)



  }
}

Linguagem C
#include <stdio.h>

int main() {
	float  m1, m2, m3, media;
	
	printf("Valor gasto no primeiro mes: ");
	scanf("%f",&m1);
	
	printf("Valor gasto no segundo mes: ");
	scanf("%f",&m2);
	
	printf("Valor gasto no terceiro mes: ");
	scanf("%f",&m3);
	
	media = (m1 + m2 + m3)/3;
	
	printf("A media de gastos em gasolina nos 3 meses foi:  %2.f", media);
	
	
}

Questão 5
Portugol

programa {
  funcao inicio() {
    real altura, peso_ideal
    cadeia nome
    // constantes
    const real k = 72.7
    const inteiro b = 58
    //entrada de dados 
    escreva("Informe a nome: ")
    leia(nome)
    escreva("Informe a altura: ")
    leia(altura)
    //processamento
    peso_ideal = k*altura-b
    //Saída de dados
    escreva("O peso ideal de ",nome, " é ", peso_ideal)



  }
}

linguagem C
#include <stdio.h>

int main() {
	float altura, peso_ideal;
	
	const float  k = 72.5;
	const float b = 58;
	
	printf("Informe sua altura: ");
	scanf("%f", &altura);
	
	peso_ideal =  k*altura-b;
	
	printf("O peso ideal para a altura %.2f m e: %.2f", altura,peso_ideal);

}

Questão 6
Portugol

programa {
  funcao inicio() {
    inteiro x, y, troca
    //entrada de dados
    escreva("Informe o valor de x: ")
    leia(x)
    escreva("Informe o valor de y: ")
    leia(y)
    //processamento 
    escreva("Valores de x e y antes da troca são: ", x," e ", y)
   

    troca = x
    x = y
    y = troca
    //Saída de dados 
    escreva(" \n Os valores de x e y depois da troca são: \n")
    escreva("X é: ", x,"\n")
    escreva("Y é: ", y)
  }
}

