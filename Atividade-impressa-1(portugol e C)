Questão 3
Portugol

programa {
  funcao inicio() {
    cadeia nome_aluno
    real n1, n2, n3, n4, media 
    // entrada de dados 
    escreva ("Escreva seu nome: ")
    leia(nome_aluno)
    escreva("Nota 1: ")
    leia(n1)
    escreva("Nota 2: ")
    leia(n2)
    escreva("Nota 3: ")
    leia(n3)
    escreva("Nota 4: ")
    leia(n4)
    //processamento 
    media = (n1 + n2 + n3 + n4)/4
    //Saída de dados
    escreva("A média do aluno ", nome_aluno," é: ",media)


  }
}

